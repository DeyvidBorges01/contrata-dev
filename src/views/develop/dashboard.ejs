<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contrata-Dev</title>
    <link rel="stylesheet" href="/stylesheets/HomeD.css" />
    <script
      src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"
      await
    ></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- logo e div horizontal-->
    <div class="horizontal">
      <div class="logo">
        <img src="/images/logo.webp" alt="Logo da ContrataDev" />
      </div>
    </div>
    <div class="container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <nav>
          <ul>
            <li>
              <iconify-icon icon="tabler:home" width="24"></iconify-icon>Home
            </li>
            <li>
              <a href="/develop/perfil" style="color:inherit; text-decoration:none; display:flex; gap:8px; align-items:center;">
                <iconify-icon icon="iconamoon:profile-bold" width="24"></iconify-icon>
                <span>Perfil</span>
              </a>
            </li>
          </ul>
        </nav>
      </aside>

      <!-- Conteúdo Principal -->
      <main class="main-content">
        <div class="header">
          <h1>Suas Solicitações</h1>
        </div>

        <section class="section-status">
          <div class="status">
            <h2>Abertas a Propostas</h2>
          </div>
          <div class="cards-container">
            <% if (projects && projects.length > 0) { %>
              <% projects.forEach(function(p) { %>
                <a href="/solicitacao/<%= p.id %>" style="text-decoration: none; color: inherit;">
                  <div class="card">
                    <div class="header-card">
                      <p class="valor"><%= p.budget ? ('R$ ' + p.budget.toFixed(2)) : 'Sem orçamento' %></p>
                      <p class="titulo"><%= p.title %></p>
                    </div>
                    <p><%= p.description ? p.description : 'Sem descrição' %></p>
                    <% if (p.deadline) { %>
                      <p class="prazo">Prazo: <%= new Date(p.deadline).toLocaleDateString() %></p>
                    <% } %>
                    <div class="tech-icons">
                      <% if (typeof techIconMap !== 'undefined' && p.technologies) { %>
                        <% p.technologies.split(',').filter(Boolean).forEach(function(t){ %>
                          <% var iconName = techIconMap[t] || null; %>
                          <% if (iconName) { %>
                            <iconify-icon icon="<%= iconName %>" width="24" title="<%= t %>"></iconify-icon>
                          <% } else { %>
                            <span class="tech-chip"><%= t %></span>
                          <% } %>
                        <% }) %>
                      <% } else if (p.technologies) { %>
                        <% p.technologies.split(',').filter(Boolean).forEach(function(t){ %>
                          <span class="tech-chip"><%= t %></span>
                        <% }) %>
                      <% } %>
                    </div>
                  </div>
                </a>
              <% }) %>
            <% } else { %>
              <p style="color: #ccc;">Nenhuma solicitação aberta no momento</p>
            <% } %>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
