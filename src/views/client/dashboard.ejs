<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contrata-Dev</title>
    <link rel="stylesheet" href="/stylesheets/HomeE.css" />
    <script
      src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"
      await
    ></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
    <script src="/javascripts/HomeE.js" defer></script>
  </head>

  <body>
    <!-- logo e div horizontal-->
    <div class="horizontal">
      <div class="logo"><img src="/images/logo.webp" alt="" /></div>
    </div>
    <div class="container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <nav>
          <ul>
            <li>
              <a href="dashboard">
                <iconify-icon icon="tabler:home" width="24"></iconify-icon> Home
              </a>
            </li>
            <li>
              <a href="/client/perfil" style="color:inherit; text-decoration:none; display:flex; gap:8px; align-items:center;">
                <iconify-icon icon="iconamoon:profile-bold" width="24"></iconify-icon>
                <span>Perfil</span>
              </a>
            </li>
          </ul>
        </nav>
      </aside>

      <!-- Conteúdo Principal -->
      <main class="main-content">
        <div class="header">
          <h1>Suas Solicitações</h1>
          <a href="/client/create" class="btn-criar">
            <iconify-icon icon="ic:round-plus" width="20"></iconify-icon>Criar
            sua Solicitação
          </a>
        </div>

        <section class="section-status">
          <div class="status">
            <h2>Em Produção</h2>
          </div>
          <div class="cards-container">
            <% if (client && client.Projects && client.Projects.length) { %>
              <% client.Projects.forEach(function(p){ %>
                <a href="/solicitacao/<%= p.id %>" style="text-decoration: none; color: inherit;">
                  <div class="card">
                    <div class="header-card" style="position:relative;">
                      <p class="valor"><%= p.budget ? ('R$ ' + p.budget) : 'Sem orçamento' %></p>
                      <% if (p.deadline) { %>
                        <p class="prazo">Prazo: <%= new Date(p.deadline).toLocaleDateString() %></p>
                      <% } %>
                    </div>
                    <p class="titulo"><%= p.title %></p>
                    <p><%= p.description ? p.description : '' %></p>
                    <div class="tech-icons">
                      <% if (typeof techIconMap !== 'undefined' && p.technologies) { %>
                        <% p.technologies.split(',').filter(Boolean).forEach(function(t){ %>
                          <% var iconName = techIconMap[t] || null; %>
                          <% if (iconName) { %>
                            <iconify-icon icon="<%= iconName %>" width="24" title="<%= t %>"></iconify-icon>
                          <% } else { %>
                            <span class="tech-chip"><%= t %></span>
                          <% } %>
                        <% }) %>
                      <% } else if (p.technologies) { %>
                        <% p.technologies.split(',').filter(Boolean).forEach(function(t){ %>
                          <span class="tech-chip"><%= t %></span>
                        <% }) %>
                      <% } %>
                    </div>
                  </div>
                </a>
              <% }) %>
            <% } else { %>
              <p class="muted">Nenhuma solicitação criada ainda. Clique em "Criar sua Solicitação" para começar.</p>
            <% } %>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
