<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/viewSoli.css" />
    <script
      src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"
      await
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
           
  <body>
    <div class="horizontal">
      <div class="logo">
          <div class="logo"><img src="/images/logo.webp" alt="Logo da ContrataDev" /></div>
      </div>
    </div>

    <div class="container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <nav>
          <ul>
            <li>
              <iconify-icon icon="tabler:home" width="24"></iconify-icon>Home
            </li>
            <li>
              <iconify-icon
                icon="iconamoon:profile-bold"
                width="24"
              ></iconify-icon
              >Perfil
            </li>
          </ul>
        </nav>
      </aside>

      <main>
        <section class="content">
          <div>
            <div class="voltar">
              <a href="javascript:history.back()" style="color:inherit; text-decoration:none; display:flex; gap:8px; align-items:center;">
                <iconify-icon icon="iconamoon:arrow-left-2" width="20"></iconify-icon>
                Voltar
              </a>
            </div>

            <h2><%= project && project.title ? project.title : 'TÍTULO DA SOLICITAÇÃO' %></h2>

            <span class="valor"><%= project && project.budget ? ('R$ ' + project.budget.toFixed(2)) : 'Sem orçamento' %></span>

            <div class="desc">
              <p>
                <%= project && project.description ? project.description : 'Sem descrição disponível' %>
              </p>
            </div>

            <% if (project && project.deadline) { %>
              <div class="prazo">
                <p><strong>Prazo:</strong> <%= new Date(project.deadline).toLocaleDateString() %></p>
              </div>
            <% } %>

            <div class="tecnologia">
              <p>Tecnologias que serão utilizadas:</p>
              <div class="tech">
                <% if (typeof techIconMap !== 'undefined' && project && project.technologies) { %>
                  <% project.technologies.split(',').filter(Boolean).forEach(function(t){ %>
                    <% var iconName = techIconMap[t] || null; %>
                    <% if (iconName) { %>
                      <iconify-icon icon="<%= iconName %>" width="32" title="<%= t %>"></iconify-icon>
                    <% } else { %>
                      <span class="tech-chip"><%= t %></span>
                    <% } %>
                  <% }) %>
                <% } else if (project && project.technologies) { %>
                  <% project.technologies.split(',').filter(Boolean).forEach(function(t){ %>
                    <span class="tech-chip"><%= t %></span>
                  <% }) %>
                <% } else { %>
                  <p class="muted">Nenhuma tecnologia selecionada</p>
                <% } %>
              </div>
            </div>
          </div>
          <div class="btn-container">
            <% if (canDelete) { %>
              <form method="post" action="/client/solicitacoes/<%= project.id %>/delete" onsubmit="return confirm('Deseja realmente excluir esta solicitação?');">
                <div class="button">
                  <button type="submit">Excluir Solicitação</button>
                </div>
              </form>
            <% } else { %>
              <a href="#" class="button">
                <button>Aceitar</button>
              </a>
            <% } %>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
